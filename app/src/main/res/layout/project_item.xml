<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="6dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="Final Year Project to test for fake vehicle number plates in Nigeria"
            android:id="@+id/titleTextView"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="Final Year Project to test for fake vehicle number plates in
            NigeriaFinal Year Project to test for fake vehicle number plates in NigeriaFinal Year Project to test for
            fake vehicle number plates in NigeriaFinal Year Project to test for fake vehicle number plates in Nigeria"
            android:inputType="textMultiLine"
            android:id="@+id/descriptionTextView"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="By: Okungini Oluwatomiwa"
            android:id="@+id/uploaderTextView"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: Technology"
                android:id="@+id/categoryTextView"
                />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>